<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="omnipro_featured_products" resource="default" engine="innodb"
           comment="Omnipro Featured Products Table">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Product ID"/>
        <column xsi:type="varchar" name="product_sku" length="64" nullable="false"
                comment="Product SKU"/>
        <column xsi:type="varchar" name="product_name" length="255" nullable="false"
                comment="Product Name"/>
        <column xsi:type="text" name="categories" nullable="true"
                comment="Categories"/>
        <column xsi:type="int" name="sort_order" padding="10" unsigned="true" nullable="false"
                comment="Sort Order"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false"
                comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true"
                comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <index referenceId="OMNIPRO_FEATURED_PRODUCTS_ENTITY_ID" indexType="btree">
            <column name="entity_id"/>
        </index>
    </table>
</schema>
